# ==============================================================================
# MERMAN ENVIRONMENT VARIABLES
# ==============================================================================
# Copy this file to .env for local development.
# For Production (VPS), create a .env file with the REQUIRED values below.

# ------------------------------------------------------------------------------
# 1. DATABASE (PostgreSQL)
# ------------------------------------------------------------------------------
# [REQUIRED FOR PROD]
POSTGRES_USER=merman
POSTGRES_PASSWORD=your_secure_password
POSTGRES_DB=merman

# Connection String (Auto-generated in Docker, but required for local dev)
# Local Dev Default: postgres://merman:merman_password@localhost:5439/merman
DATABASE_URL="postgres://merman:merman_password@localhost:5439/merman"

# ------------------------------------------------------------------------------
# 2. AUTHENTICATION
# ------------------------------------------------------------------------------
# [REQUIRED FOR PROD] - Generate with: openssl rand -base64 32
JWT_SECRET="changeme_in_production_this_is_unsafe"

# ------------------------------------------------------------------------------
# 3. OBJECT STORAGE (MinIO)
# ------------------------------------------------------------------------------
# [REQUIRED FOR PROD] - Root credentials for MinIO
MINIO_ACCESS_KEY=merman_admin
MINIO_SECRET_KEY=secure_minio_password

# Configuration
MINIO_ENDPOINT="localhost" # "minio" inside docker network
MINIO_PORT="9000"
MINIO_USE_SSL="false"

# Buckets (Auto-created)
MINIO_BUCKET_FILES="merman-files"
MINIO_BUCKET_EXPORTS="merman-exports"

# ------------------------------------------------------------------------------
# 4. WEBSOCKET & NETWORKING
# ------------------------------------------------------------------------------
# [REQUIRED FOR PROD] - Your VPS IP or Domain
# Format: http://<YOUR_VPS_IP>:3000
WS_CORS_ORIGIN="http://localhost:3000"

# Internal Config
WS_PORT="3001"

# ------------------------------------------------------------------------------
# 5. REDIS
# ------------------------------------------------------------------------------
# Local Dev Default: redis://localhost:6379
# Docker Internal: redis://redis:6379
REDIS_URL="redis://localhost:6379"
