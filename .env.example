# Database Connection
# Format: postgres://user:password@host:port/database_name
DATABASE_URL="postgres://merman:merman_password@localhost:5439/merman"

# Auth
# Generate a secret: openssl rand -base64 32
JWT_SECRET="your-secret-key-here"

# Redis
REDIS_URL="redis://localhost:6379"

# MinIO (Object Storage)
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_ACCESS_KEY="merman"
MINIO_SECRET_KEY="merman_minio_password"
MINIO_USE_SSL="false"

# MinIO Bucket Names (auto-created on docker-compose up)
MINIO_BUCKET_FILES="merman-files"
MINIO_BUCKET_EXPORTS="merman-exports"

# WebSocket Server
WS_PORT="3001"
WS_CORS_ORIGIN="http://localhost:3000"

# Client-side (prefix with NEXT_PUBLIC_ for browser access)
NEXT_PUBLIC_WS_URL="ws://localhost:3001"
